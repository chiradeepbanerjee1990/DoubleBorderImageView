<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.chiradeep.sample.MainActivity">

    <com.chiradeep.countryflag.imageview.DoubleCircularImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:outerradius="300"
            app:innerradius="280"
            app:innerrardiuswidth="6"
            app:outerradiuswidth="8"
            app:outerciclecolor="@color/saffron"
            android:adjustViewBounds="true"
            app:innercirclecolor="@color/india_green"
            android:background="@drawable/logo"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>