<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="awesometext_View">

        <attr name="android:padding" />
        <attr name="android:paddingLeft" />
        <attr name="android:paddingRight" />
        <attr name="android:paddingTop" />
        <attr name="android:paddingBottom" />
        <attr name="android:onClick" />


        <!-- Dimension Attributes -->
        <attr name="awesometext_setRadius" format="dimension" />
        <attr name="awesometext_setStrokeWidth" format="dimension" />
        <attr name="awesometext_checkedDrawablePadding" format="dimension" />


        <!-- Color Attributes -->
        <attr name="awesometext_setRoundedBorderColor" format="color" />
        <attr name="awesometext_setRoundedBGColor" format="color" />
        <attr name="awesometext_setActionTextColor" format="color" />


        <!-- String Attributes -->
        <attr name="awesometext_setFont" format="string" />
        <attr name="awesometext_setExpandHint" format="string" />
        <attr name="awesometext_setCollapseHint" format="string" />

        <!-- Enum Attributes -->
        <attr name="awesometext_setShape" format="enum">
            <enum name="rectangle" value="0" />
            <enum name="oval" value="1" />
            <enum name="circle" value="2" />
            <enum name="trialgle" value="3"/>
            <enum name="hexagonal" value ="4"/>
        </attr>
        <attr name="awesometext_checkedIconPosition" format="enum">
            <enum name="left" value="0" />
            <enum name="right" value="1" />
        </attr>


        <!-- Boolean Attributes -->
        <attr name="awesometext_setRoundedView" format="boolean" />
        <attr name="awesometext_setUnderLineText" format="boolean" />
        <attr name="awesometext_setStrikeText" format="boolean" />
        <attr name="awesometext_setExpandableText" format="boolean" />
        <attr name="awesometext_setActionTextVisible" format="boolean" />
        <attr name="awesometext_setCheckedText" format="boolean" />
        <attr name="awesometext_setChecked" format="boolean" />

        <!-- Integer Attributes -->
        <attr name="awesometext_setTrimLines" format="integer" />


        <!-- Reference Attributes -->
        <attr name="awesometext_checkedDrawable" format="reference" />
        <attr name="awesometext_unCheckedDrawable" format="reference" />
        <attr name="awesometext_checkMarkTint" format="reference" />




    </declare-styleable>

</resources>