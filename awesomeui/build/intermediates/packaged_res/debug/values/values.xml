<?xml version="1.0" encoding="utf-8"?>
<resources>
    <string name="app_name">AwesomeUi</string>
    <declare-styleable name="awesometext_View">

        <attr name="android:padding"/>
        <attr name="android:paddingLeft"/>
        <attr name="android:paddingRight"/>
        <attr name="android:paddingTop"/>
        <attr name="android:paddingBottom"/>
        <attr name="android:onClick"/>


        <!-- Dimension Attributes -->
        <attr format="dimension" name="awesometext_setRadius"/>
        <attr format="dimension" name="awesometext_setStrokeWidth"/>
        <attr format="dimension" name="awesometext_checkedDrawablePadding"/>


        <!-- Color Attributes -->
        <attr format="color" name="awesometext_setRoundedBorderColor"/>
        <attr format="color" name="awesometext_setRoundedBGColor"/>
        <attr format="color" name="awesometext_setActionTextColor"/>


        <!-- String Attributes -->
        <attr format="string" name="awesometext_setFont"/>
        <attr format="string" name="awesometext_setExpandHint"/>
        <attr format="string" name="awesometext_setCollapseHint"/>

        <!-- Enum Attributes -->
        <attr format="enum" name="awesometext_setShape">
            <enum name="rectangle" value="0"/>
            <enum name="oval" value="1"/>
            <enum name="circle" value="2"/>
            <enum name="trialgle" value="3"/>
            <enum name="hexagonal" value="4"/>
        </attr>
        <attr format="enum" name="awesometext_checkedIconPosition">
            <enum name="left" value="0"/>
            <enum name="right" value="1"/>
        </attr>


        <!-- Boolean Attributes -->
        <attr format="boolean" name="awesometext_setRoundedView"/>
        <attr format="boolean" name="awesometext_setUnderLineText"/>
        <attr format="boolean" name="awesometext_setStrikeText"/>
        <attr format="boolean" name="awesometext_setExpandableText"/>
        <attr format="boolean" name="awesometext_setActionTextVisible"/>
        <attr format="boolean" name="awesometext_setCheckedText"/>
        <attr format="boolean" name="awesometext_setChecked"/>

        <!-- Integer Attributes -->
        <attr format="integer" name="awesometext_setTrimLines"/>


        <!-- Reference Attributes -->
        <attr format="reference" name="awesometext_checkedDrawable"/>
        <attr format="reference" name="awesometext_unCheckedDrawable"/>
        <attr format="reference" name="awesometext_checkMarkTint"/>




    </declare-styleable>
</resources>